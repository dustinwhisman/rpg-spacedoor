{
  "name": "rpg-spacedoor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "start": "netlify dev --command \"npm run dev\"",
    "dev": "run-p eleventy:dev sass:dev js:dev",
    "build": "run-s eleventy:build sass:build js:build js:build:legacy",
    "eleventy:dev": "eleventy --serve",
    "eleventy:build": "eleventy",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "js:dev:legacy": "NODE_ENV=development webpack --progress -w",
    "js:build:legacy": "NODE_ENV=production webpack --progress",
    "clean": "rm -rf dist",
    "lint": "run-s lint:html lint:css lint:js",
    "prelint:html": "npm run build",
    "lint:html": "pa11y-ci -c .pa11yci.json './dist/**/*.html'",
    "lint:css": "stylelint 'src/scss/**/*.scss' --color --formatter verbose",
    "lint:js": "eslint . --ext .js,.ts,.tsx",
    "test": "jest --config=jest.config.js",
    "test:ci": "npm run test -- --coverage",
    "test:mutate": "stryker run",
    "update-deps": "ncu -u",
    "postupdate-deps": "npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@stryker-mutator/core": "^6.3.1",
    "@stryker-mutator/jest-runner": "^6.3.1",
    "@types/jest": "^29.2.6",
    "babel-loader": "^9.1.2",
    "esbuild": "^0.17.3",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.4.1",
    "npm-check-updates": "^16.6.2",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.7",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "dotenv": "^16.0.3",
    "firebase": "^9.16.0",
    "firebase-admin": "^11.5.0",
    "middy": "^0.36.0",
    "node-fetch": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

{
  "name": "rpg-spacedoor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "start": "netlify dev --command \"npm run dev\"",
    "dev": "run-p eleventy:dev sass:dev js:dev",
    "build": "run-s eleventy:build sass:build js:build",
    "eleventy:dev": "eleventy --serve",
    "eleventy:build": "eleventy",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.ts --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "clean": "rimraf dist",
    "lint": "run-s lint:html lint:css lint:js",
    "prelint:html": "npm run build",
    "lint:html": "pa11y-ci -c .pa11yci.json './dist/**/*.html'",
    "lint:css": "stylelint 'src/scss/**/*.scss' --color --formatter verbose",
    "lint:js": "eslint . --ext .js,.ts,.tsx",
    "test": "jest --config=jest.config.js",
    "test:ci": "npm run test -- --coverage",
    "test:mutate": "stryker run",
    "update-deps": "npx npm-check-updates --doctor -u"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@stryker-mutator/core": "^5.6.1",
    "@stryker-mutator/jest-runner": "^5.6.1",
    "@types/jest": "^27.4.1",
    "esbuild": "^0.14.31",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.11",
    "stylelint": "^14.6.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "^27.1.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^5.0.3",
    "@dnd-kit/sortable": "^6.0.1",
    "@dnd-kit/utilities": "^3.1.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "dotenv": "^16.0.0",
    "firebase": "^9.6.10",
    "firebase-admin": "^10.0.2",
    "middy": "^0.36.0",
    "node-fetch": "^3.2.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
